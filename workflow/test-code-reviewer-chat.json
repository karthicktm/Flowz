{
  "version": "1.0",
  "name": "Code Reviewer Bot",
  "description": "AI-powered code review chatbot",
  "trigger": {
    "type": "chat",
    "config": {
      "inputVariable": "userMessage"
    }
  },
  "config": {
    "steps": [
      {
        "id": "chat",
        "module": "ai.ai-sdk.chat",
        "inputs": {
          "options": {
            "messages": [
              { "role": "system", "content": "You are an expert code reviewer. Provide concise, actionable feedback on code quality, security, and best practices." },
              { "role": "user", "content": "{{trigger.userMessage}}" }
            ],
            "model": "gpt-4o-mini",
            "provider": "openai"
          }
        }
      }
    ]
  },
  "metadata": {
    "requiresCredentials": ["openai"]
  }
}
