{
  "version": "1.0",
  "name": "GitHub Trending Table",
  "description": "Get top 5 trending GitHub repos and display as table",
  "trigger": {
    "type": "manual",
    "config": {}
  },
  "config": {
    "steps": [
      {
        "id": "fetch",
        "module": "devtools.github.getTrendingRepositories",
        "inputs": {
          "options": {
            "language": "javascript",
            "since": "weekly"
          }
        },
        "outputAs": "repos"
      },
      {
        "id": "format",
        "module": "utilities.javascript.execute",
        "inputs": {
          "options": {
            "code": "return repos.slice(0, 5).map(r => ({ name: r.name, stars: r.stargazersCount, url: r.htmlUrl, description: r.description || '' }));",
            "context": {
              "repos": "{{repos}}"
            }
          }
        },
        "outputAs": "tableData"
      }
    ],
    "returnValue": "{{tableData}}",
    "outputDisplay": {
      "type": "table",
      "columns": [
        { "key": "name", "label": "Repository", "type": "text" },
        { "key": "stars", "label": "Stars", "type": "number" },
        { "key": "url", "label": "Link", "type": "link" },
        { "key": "description", "label": "Description", "type": "text" }
      ]
    }
  },
  "metadata": {
    "requiresCredentials": []
  }
}
